{
  "name": "playwright",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "test": "playwright test",
    "test:smoke": "playwright test --grep \"smoke\"",
    "test:regression": "playwright test --grep \"regression\"",
    "test:dev": "cross-env ENV=dev playwright test",
    "test:uat": "cross-env ENV=uat playwright test",
    "report:build": "allure generate allure-results --clean -o allure-report",
    "report:deploy": "npm run report:build && netlify deploy --dir=allure-report --prod"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "@playwright/test": "^1.54.2",
    "@types/node": "^24.2.0",
    "allure-commandline": "^2.34.1",
    "allure-js-commons": "^3.3.0",
    "allure-playwright": "^3.3.0",
    "cross-env": "^7.0.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  }
}
